extends layout

block content
  div.content
    div.products-container
      h1.products-header Wlecome to THE STORE
      a.button.primary(href='/products/add') Add Product
    div.table-container
      table
        thead
        th Product Name
        th Rating
        th category
        th
        tbody
          each product in products
            tr
              td= product.product_name
              td= product.rating
              td= product.category
              td
                a(href=`/products/profile/${product.id}`) View Product